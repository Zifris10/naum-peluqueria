#renderCalendar
.modal.fade#modalAddAppointment(tabindex='-1' data-bs-backdrop='static' data-bs-keyboard='false')
    .modal-dialog.modal-dialog-centered.modal-dialog-scrollable
        .modal-content
            .modal-header
                h5.modal-title.color-blue.fw-bold Agregar cita
            .modal-body
                .mb-3
                    label.form-label.color-green.fw-bold(for='dateAppointment') Fecha de cita
                    input.form-control.input-style.new-appointment#dateAppointment(type='date' placeholder='')
                .row
                    .col-6.mb-4
                        label.form-label.color-green.fw-bold(for='startTimeAppointment') Hora de inicio
                        input.form-control.input-style.new-appointment#startTimeAppointment(type='time' placeholder='')
                    .col-6.mb-4
                        label.form-label.color-green.fw-bold(for='endTimeAppointment') Hora de fin
                        input.form-control.input-style.new-appointment#endTimeAppointment(type='time' placeholder='')
                .mb-4
                    input.form-control.input-style.new-appointment#nameAppointment(type='text' placeholder='Nombre...' autocomplete='off')
                .mb-5
                    input.form-control.input-style.new-appointment#phoneAppointment(type='text' placeholder='Teléfono (opcional)...' autocomplete='off')
                .text-center
                    button.btn.text-white.btn-cancel.font-16.me-3.color-blue(onclick='cleanAddAppointment()') Cancelar
                    button.btn.text-white.btn-style.font-16.bg-blue#btnAddAppointment(onclick='addAppointment()') Agregar
.modal.fade#modalDetailAppointment(tabindex='-1' data-bs-backdrop='static' data-bs-keyboard='false')
    .modal-dialog.modal-dialog-centered.modal-dialog-scrollable
        .modal-content
