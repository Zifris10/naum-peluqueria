doctype
html(lang='es')
    head
        meta(charset='utf-8')      
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700&display=swap')
        link(rel='stylesheet' href='../bootstrap-5.3.0/css/bootstrap.min.css')
        link(rel='stylesheet' href='../toastify/toastify.css')
        link(rel='stylesheet' href='../stylesheets/index.css')
        link(rel='icon' href='../images/logo.jpeg')
        title Iniciar sesión
    body.bg-blue
        .myForm.bg-white.radius-40
            br
            .mb-4
                input.form-control.input-style#email(type='text' placeholder='Correo electrónico *' autocomplete='off')
            .mb-5
                input.form-control.input-style#password(type='password' placeholder='Contraseña *' autocomplete='off')
            .mb-5.text-center
                span.font-16.text-secondary ¿Olvidaste tu contraseña?
                br
                span.cursor-pointer.font-16.color-blue.text-decoration-underline(onclick='forgotPassword()') Recuperar contraseña
            .mb-4.text-center
                button.btn.text-white.btn-iniciar-sesion.font-16.bg-blue#btnLogin(onclick='login()') Iniciar sesión
        script(src='../jquery/code.jquery.com_jquery-3.7.0.slim.min.js')
        script(src='../axios/axios.min.js')
        script(src='../javascripts/generals.js')
        script(src='../toastify/toastify.js')
        script(src='../javascripts/index.js')